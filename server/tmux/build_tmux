
if [ -z $1 ];then
echo "input install path"
exit
fi
mkdir -p $1
buildPath=$1
echo $buildPath
cd $buildPath
git clone -b R1 https://github.com/foresthz/tmux.git
git clone -b R1 https://github.com/foresthz/libevent
cd libevent
./autogen.sh
./configure --prefix=$1
make
make install

echo "build tmux"
cd $buildPath/tmux
./autogen.sh
./configure CFLAGS=-I$1/include LDFLAGS=-L$1/lib --prefix=$1
make
make install
if [ $? = 0 ];then
  echo "success!";
else
  echo "failed";
fi
